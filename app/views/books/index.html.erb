<div class="container">
	<!-- <p id="notice"><%= notice %></p> -->
	<div class="row">
		<div class="col-xs-3">

			<h2>User info</h2>
			<%= render 'users/profile', user: current_user %>


			<h2>New book</h2>
			<%= render 'books/newform', book: @book %>

		</div>




		<div class="col-xs-9">

			<h2>Books</h2>

			<table class="table table-hover table-inverse">

				<thead>
					<tr>
						<th>Title</th>
						<th>Opinion</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td>
							<%= link_to(book.user) do %>
							<%= attachment_image_tag(book.user, :profile_image, :fill, 55, 55, fallback: "no-image-mini.jpg") %>
							<% end %>
						</td>
						<td><%= link_to book.title, book, class: "book_#{book.id}" %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>

			</table>

		</div>
	</div>
</div>